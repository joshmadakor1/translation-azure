<html>
    <% include ../partials/head %>
<body class="bg-light">
    <% include ../partials/scripts %>
    <% include ../partials/nav %>
    <div class="container bg-light px-0 my-3 p-3">
        <font class="display-3">Answer Translation Requests!</font>
    </div>
    <div class="container bg-white px-0 my-3 p-3 border border-secondary">

        <table class="table">
            <tr>
                <td width="15%"><font size="5">From  </font>      </td>
                <td width="15%"><font size="5">To   </font>        </td>
                <td width="30%"><font size="5">Word/Phrase</font> </td>
                <td width="30%"><font size="5">Notes   </font>        </td>
            </tr>
            <% for (let i = 0; i < question.length; i++) { %>
            <tr>
                <td width="15%"><%= sourceLanguage[i] %>      </td>
                <td width="15%"><%= destinationLanguage[i] %> </td>
                <td width="30%"><a href="/answer/?_id=<%= id[i] %>"><%= question[i] %></a></td>
                <td width="30%"><%= details[i] %> </td>
            </tr>
            <% } %>

        </table>
    </div>
    <% include ../partials/scripts %>
    <% include ../partials/footer %>
</body>
</html>
